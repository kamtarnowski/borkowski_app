<div class="container" id="back_other">
  <div class="row" id="row_next">
    <div class="col-sm-offset-1 col-sm-10 col-lg-offset-1 col-lg-10">

          <div class="table-responsive">
              <table class="table table-hover">

                <tr>
                  <th>Opinion_id</th>
                  <th>Treść</th>
                  <th>Użytkownik / id</th>
                </tr>
                <% Opinion.all.each do |opn| %>
                <tr>
                  <td><%= opn.id %></td>
                  <td><%= opn.content %> &nbsp; <%= link_to '<i class="fa fa-times"></i>'.html_safe, opn, :method => :delete %> &nbsp; <i class="fa fa-pencil-square-o"></i> </td>

                  <td><%= opn.user.name %> / <b><%= opn.user.id %></b></td>
                </tr>
                <tr class="edit_slide" style="display: none">

                  <td></td>
                  <td>
                  <p><strong>Edycja opini:</strong></p>

                  <%= simple_form_for opn do |form| %>
                      <%= form.input :content, as: :text, input_html: { :value => opn.content, minleangth: 50, maxlength: 140 }, label: 'Treść:', hint: 'Znaki Minimum: 50 Maximum: 140', required: false %>

                      <%= form.button :submit, 'Zmień opinię' %>
                  <% end %>
                  </td>
                  <td></td>

                </tr>
                <% end %>

              </table>

          </div>

    </div>
  </div>
</div>
