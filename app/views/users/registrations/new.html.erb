<% title 'Rejestracja Nowego Użytkownika' %>
<% description 'Wylewki Mixokretem Tynki Agregatem Posadzki Przemysłowe na terenie: Połaniec, Staszów, Osiek i inne. Najlepsza jakość i rozsądne ceny!' %>
<% keywords 'Krzysztof Borkowski Wylewki Tynki Posadzki Połaniec Staszów Mielec Tarnobrzeg Osiek Wylewka Tynk Posadzka Agregatem Mixokretem Przemysłowa Firma Budowlana Budownictwo Remont Beton Jakość Cena Facebook'  %>

<div class="container" id="back_other">
  <div class="row" id="row_next">
    <div class="col-sm-offset-1 col-sm-10 col-lg-offset-1 col-lg-10">

        <h2>Rejestracja Użytkownika</h2><br>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :name, label: 'Imię i nazwisko', required: true %>
            <%= f.input :password, required: true, label: 'Hasło', hint: ("#{@minimum_password_length} minimum znaków" if @validatable) %>
            <%= f.input :password_confirmation, label: 'Potwierdź hasło', required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Zarejestruj" %>
          </div>
        <% end %>

          <br>
          <p><strong>* - Pola wymagane.</strong></p>
          <p> <%= render "users/shared/links" %> </p>

    </div>
  </div>
</div>